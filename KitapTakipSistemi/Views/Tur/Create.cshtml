@model KitapTakipSistemi.DAL.Tur

@{
    ViewBag.Title = "Yeni Tür Ekle";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Yeni Tür Ekle</h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Ad, htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Ad, new { @class = "form-control", placeholder = "Tür adını giriniz" })
                        @Html.ValidationMessageFor(m => m.Ad, "", new { @class = "text-danger" })
                    </div>

                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-plus"></i> Ekle
                    </button>
                    @Html.ActionLink("Geri Dön", "Index", null, new { @class = "btn btn-secondary ms-2" })
                }
            </div>
        </div>
    </div>
</div>
