@model KitapTakipSistemi.DAL.Odunc

@{
    ViewBag.Title = "Kitap İade";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    html, body {
        height: 100%;
    }

    body {
        display: flex;
        flex-direction: column;
    }

    main {
        flex: 1;
    }

    footer {
        margin-top: auto;
    }
</style>

<main class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white text-center">
            <h3>Kitap İade</h3>
        </div>
        <div class="card-body text-center">
            <p class="fs-5"><strong>Kitap:</strong> @Model.Kitap.Ad</p>
            <p class="fs-5"><strong>Kullanıcı:</strong> @Model.KullaniciAdi</p>
            <p class="fs-5"><strong>Ödünç Tarihi:</strong> @Model.OduncTarihi.ToShortDateString()</p>

            <div class="alert alert-warning mt-4" role="alert">
                Bu kitabı iade etmek istediğinize emin misiniz?
            </div>

            @using (Html.BeginForm("IadeEt", "Odunc", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.OduncId)

                <button type="submit" class="btn btn-success me-2">
                    <i class="bi bi-arrow-counterclockwise"></i> İade Et
                </button>

                @Html.ActionLink("İptal", "Index", null, new { @class = "btn btn-secondary" })
            }
        </div>
    </div>
</main>

<footer class="bg-dark text-white text-center py-3">
    <div class="container">
        <span>&copy; 2025 Kitap Takip Sistemi</span>
    </div>
</footer>
