<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Kitap Takip Sistemi</title>

    <!-- Bootstrap & Iconlar -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        html, body {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
            background-color: #f4f6f8;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        main {
            flex: 1;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.6rem;
            letter-spacing: 1px;
        }

        footer {
            background-color: #343a40;
            color: #fff;
            text-align: center;
            padding: 15px 0;
            font-size: 0.95rem;
        }

        /* Modern Offcanvas Menü */
        .offcanvas {
            background-color: #ffffff;
            border-right: 1px solid #e0e0e0;
        }

        .offcanvas-header {
            background-color: #007bff;
            color: white;
            padding: 20px;
        }

        .offcanvas-title {
            font-size: 1.4rem;
            font-weight: 600;
        }

        .offcanvas-body {
            padding-top: 25px;
        }

            .offcanvas-body .nav-link {
                display: flex;
                align-items: center;
                font-size: 1.1rem;
                padding: 12px 18px;
                margin-bottom: 12px;
                border-radius: 8px;
                color: #333;
                font-weight: 500;
                transition: all 0.3s ease-in-out;
            }

                .offcanvas-body .nav-link i {
                    margin-right: 10px;
                    font-size: 1.2rem;
                }

                .offcanvas-body .nav-link:hover {
                    background-color: #f0f2f5;
                    color: #007bff;
                    transform: translateX(4px);
                }

        /* Navbar button */
        .navbar .btn-outline-light {
            border: none;
            font-size: 1.2rem;
        }

            .navbar .btn-outline-light:hover {
                background-color: rgba(255, 255, 255, 0.1);
            }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-dark bg-dark shadow-sm">
        <div class="container-fluid">
            <button class="btn btn-outline-light me-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasMenu" aria-controls="offcanvasMenu">
                <i class="bi bi-list"></i>
            </button>
            <a class="navbar-brand" href="/">📚 Kitap Takip Sistemi</a>
        </div>
    </nav>

    <!-- Offcanvas Sidebar Menu (GÜNCELLENDİ) -->
    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasMenu" aria-labelledby="offcanvasMenuLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasMenuLabel"><i class="bi bi-grid-1x2-fill me-2"></i>Menü</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Kapat"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="/Kitap"><i class="bi bi-book"></i> Kitaplar</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Tur"><i class="bi bi-tags"></i> Türler</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Odunc"><i class="bi bi-arrow-left-right"></i> Ödünç / İade</a>
                </li>
            </ul>
        </div>
    </div>

    <!-- Page Content -->
    <main class="container my-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer>
        <div class="container">
            <p class="mb-0">&copy; @DateTime.Now.Year - Kitap Takip Sistemi</p>
        </div>
    </footer>

    <!-- Script alanı -->
    @RenderSection("Scripts", required: false)
</body>
</html>
