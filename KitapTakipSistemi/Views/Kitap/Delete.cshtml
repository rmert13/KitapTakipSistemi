@model KitapTakipSistemi.DAL.Kitap

@{
    ViewBag.Title = "Kitap Sil";
}

<div class="container mt-5">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-trash-alt me-2"></i> Kitap Sil</h4>
        </div>

        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <strong>Uyarı!</strong> Bu kitabı silmek istediğinize emin misiniz?
            </div>

            <ul class="list-group mb-4">
                <li class="list-group-item"><strong>Kitap Adı:</strong> @Model.Ad</li>
                <li class="list-group-item"><strong>Yazar:</strong> @Model.Yazar</li>
                <li class="list-group-item"><strong>Yayın Yılı:</strong> @Model.YayinYili</li>
                <li class="list-group-item"><strong>Tür:</strong> @Model.Tur.Ad</li>
                <li class="list-group-item"><strong>Stok:</strong> @Model.Stok</li>
            </ul>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-1"></i> Sil
                    </button>
                    @Html.ActionLink("İptal", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>
