@model KitapTakipSistemi.DAL.Kitap

@{
    ViewBag.Title = "Kitap Düzenle";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-warning text-dark">
                <h4 class="mb-0">📚 Kitap Düzenle</h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.KitapId)

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Ad, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Ad, new { @class = "form-control", placeholder = "Kitap adı giriniz" })
                        @Html.ValidationMessageFor(m => m.Ad, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Yazar, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Yazar, new { @class = "form-control", placeholder = "Yazar adı giriniz" })
                        @Html.ValidationMessageFor(m => m.Yazar, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.YayinYili, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.YayinYili, new { @class = "form-control", placeholder = "Yayın yılı giriniz" })
                        @Html.ValidationMessageFor(m => m.YayinYili, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.TurId, "Tür", new { @class = "form-label" })
                        @Html.DropDownList("TurId", (SelectList)ViewBag.TurId, "Tür Seçiniz", new { @class = "form-select" })
                        @Html.ValidationMessageFor(m => m.TurId, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Stok, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Stok, new { @class = "form-control", type = "number", min = "0", placeholder = "Stok adedi" })
                        @Html.ValidationMessageFor(m => m.Stok, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        <label for="Foto" class="form-label">Kitap Fotoğrafı</label>
                        <input type="file" name="Foto" id="Foto" accept="image/*" class="form-control" />
                        @if (!string.IsNullOrEmpty(Model.FotoUrl))
                        {
                            <div class="mt-3">
                                <p><strong>Mevcut Fotoğraf:</strong></p>
                                <img src="@Url.Content(Model.FotoUrl)" alt="Kitap Fotoğrafı" class="img-thumbnail shadow-sm" style="max-height: 200px;" />
                            </div>
                        }
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-success">
                            💾 Kaydet
                        </button>
                        @Html.ActionLink("İptal", "Index", null, new { @class = "btn btn-secondary" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>
