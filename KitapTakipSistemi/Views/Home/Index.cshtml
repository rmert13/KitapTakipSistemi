@model List<KitapTakipSistemi.DAL.Kitap>

@{
    ViewBag.Title = "Ana Sayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: linear-gradient(rgba(255, 255, 255, 0.85), rgba(255, 255, 255, 0.85)), url('/Content/images/Kitaplık.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    .carousel-caption {
        background-color: rgba(0, 0, 0, 0.5);
        padding: 15px;
        border-radius: 10px;
    }

    .carousel img {
        object-fit: cover;
        height: 400px;
    }

    .carousel-inner {
        text-align: center;
    }

    .carousel-item img {
        margin: 0 auto;
    }
</style>

<!-- Giriş Mesajı -->
<div class="text-center my-4">
    <h2 class="display-4">📚 Kitap Envanter ve Ödünç Takip Sistemi</h2>
    <p class="lead">Hoş geldiniz! Burada kitapları görüntüleyebilir, ödünç alabilir ve takip edebilirsiniz.</p>
</div>

<!-- Carousel Alanı -->
<div id="kitapCarousel" class="carousel slide mb-5 shadow" data-bs-ride="carousel" data-bs-interval="3000">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#kitapCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#kitapCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#kitapCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>

    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://images.unsplash.com/photo-1512820790803-83ca734da794?auto=format&fit=crop&w=1200&h=400&q=80" class="d-block w-100" alt="Kütüphane">
            <div class="carousel-caption d-none d-md-block">
                <h5 class="text-white">Kütüphaneler Bilgelik Dolu</h5>
                <p class="text-white">Her kitap yeni bir yolculuk.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://images.unsplash.com/photo-1519681393784-d120267933ba?auto=format&fit=crop&w=1200&h=400&q=80" class="d-block w-100" alt="Kitap Okuma">
            <div class="carousel-caption d-none d-md-block">
                <h5 class="text-white">Okudukça Büyürsün</h5>
                <p class="text-white">Bilgiye açılan kapı burada.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://images.unsplash.com/photo-1524985069026-dd778a71c7b4?auto=format&fit=crop&w=1200&h=400&q=80" class="d-block w-100" alt="Kitap Rafı">
            <div class="carousel-caption d-none d-md-block">
                <h5 class="text-white">Her Raf Bir Hazine</h5>
                <p class="text-white">Okumaya nereden başlayacağını seç.</p>
            </div>
        </div>
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#kitapCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Önceki</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#kitapCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Sonraki</span>
    </button>
</div>

<!-- Kitap Galerisi -->
@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var kitap in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@(!string.IsNullOrEmpty(kitap.FotoUrl) ? kitap.FotoUrl : "https://via.placeholder.com/300x200?text=Resim+Yok")" class="card-img-top" style="height: 200px; object-fit: cover;" alt="Kitap Görseli" />
                    <div class="card-body">
                        <h5 class="card-title">@kitap.Ad</h5>
                        <p class="card-text text-muted" style="font-size: 0.9rem;">
                            <strong>Yazar:</strong> @kitap.Yazar<br />
                            <strong>Yıl:</strong> @kitap.YayinYili<br />
                            <strong>Tür:</strong> @kitap.Tur.Ad
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
}
<!-- Boşsa hiçbir şey gösterme -->
